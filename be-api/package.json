{
  "name": "be-api",
  "version": "0.0.1",
  "description": "Backend",
  "private": true,
  "scripts": {
    "build": "tsup --env.NODE_ENV production",
    "build:po": "po-extract --outExt=.ts --outDir=./src/i18n/dictionaries --fixPo",
    "watch": "tsup --watch --env.NODE_ENV development --onSuccess 'node --enable-source-maps dist/index.js'",
    "watch:po": "po-extract --outExt=.ts --outDir=./src/i18n/dictionaries --watch --fixPo",
    "start": "node dist/index.js",
    "typecheck": "tsc",
    "lint": "eslint . --ext .ts",
    "test": "cross-env NODE_ENV=test vitest run"
  },
  "dependencies": {
    "@fastify/cookie": "^9.4.0",
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/passport": "^2.5.0",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/session": "^10.9.0",
    "@fastify/swagger": "^8.15.0",
    "@fastify/swagger-ui": "^4.1.0",
    "@types/dotenv-flow": "^3.3.3",
    "@types/json-schema": "^7.0.15",
    "@types/node": "^22.10.1",
    "@types/pg": "^8.11.10",
    "@types/supertest": "^6.0.2",
    "ajv-keywords": "^5.1.0",
    "be-db": "*",
    "cross-env": "^7.0.3",
    "dayjs": "^1.11.13",
    "dotenv-flow": "^4.1.0",
    "eslint": "^8.57.0",
    "eslint-plugin-nka": "^1.3.0",
    "fastify": "^4.28.1",
    "fastify-extract-definitions": "^3.1.0",
    "intl-messageformat": "^10.7.10",
    "pg": "^8.13.1",
    "pg-mem": "3.0.2",
    "po-extract": "^2.1.9",
    "shared": "*",
    "supertest": "^7.0.0",
    "tsup": "^8.3.6",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
