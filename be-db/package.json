{
  "name": "be-db",
  "version": "0.0.1",
  "description": "Development database",
  "private": true,
  "main": "./build",
  "types": "./src",
  "scripts": {
    "postinstall": "yarn run build",
    "build": "tsc -b",
    "watch": "yarn run build -w",
    "lint": "eslint . --ext .ts",
    "pg:init": "initdb -D data/${CLUSTER:-postgres} -E UTF8 --locale=en_US.UTF-8",
    "pg:init:darwin": "initdb -D data/${CLUSTER:-postgres} -E UTF8 --locale=en_US",
    "pg:migrate": "cross-env NODE_PATH=build/ node ./build/src/postgres/migrate",
    "pg:start": "postgres -D data/${CLUSTER:-postgres} -p ${PORT:-5300}"
  },
  "dependencies": {
    "@dbml/core": "^3.9.4",
    "@types/dotenv-flow": "^3.3.3",
    "@types/node": "^22.10.1",
    "cross-env": "^7.0.3",
    "dotenv-flow": "^4.1.0",
    "eslint": "^8.57.0",
    "eslint-plugin-nka": "^1.3.0",
    "node-pg-migrate": "^7.8.0",
    "pg": "^8.13.1",
    "typescript": "^5.7.2"
  }
}
